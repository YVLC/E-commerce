@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <!-- Links Section: About, My Products, Payment History -->
            <div class="top-links">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
                <AuthorizeView>
                    <NotAuthorized>
                        <a href="/login">Login</a>
                    </NotAuthorized>
                    <Authorized>
                        <a href="/my-products">My Products</a>
                        <a href="/history">Payment History</a>
                        <a href="/logout">Logout</a>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
